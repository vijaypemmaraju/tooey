{
  "name": "@tooey/server",
  "version": "1.0.0",
  "description": "Server-side rendering for tooey with streaming and island architecture",
  "main": "dist/server.js",
  "module": "dist/server.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/server.esm.js",
      "require": "./dist/server.js",
      "default": "./dist/server.esm.js"
    },
    "./node": {
      "types": "./dist/adapters/node.d.ts",
      "import": "./dist/node.esm.js",
      "require": "./dist/node.js"
    },
    "./edge": {
      "types": "./dist/adapters/edge.d.ts",
      "import": "./dist/edge.esm.js",
      "require": "./dist/edge.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "tooey",
    "ssr",
    "server-rendering",
    "streaming",
    "islands",
    "hydration"
  ],
  "author": "Vijay Pemmaraju",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vijaypemmaraju/tooey.git",
    "directory": "packages/server"
  },
  "bugs": {
    "url": "https://github.com/vijaypemmaraju/tooey/issues"
  },
  "homepage": "https://github.com/vijaypemmaraju/tooey/tree/main/packages/server#readme",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@tooey/ui": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@tooey/ui": "workspace:*",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.0.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  }
}
